<div class="w-full md:w-8/12 lg:w-6/12 xl:w-4/12">
  <div class="single_blog mx-3 mt-8 rounded-xl bg-white transition-all duration-300 overflow-hidden shadow hover:shadow-lg">
    <a class="block" href="{{ topic.url | url}}">
      <img src="{{ topic.data.image }}" alt="иллюстрация для темы" class="w-full">
    </a>
    <div class="px-4 py-5">
      <h3 class="text-lg font-bold">
        {% if topic.data.title %}{{ topic.data.title }}{% else %}<code>{{ topic.url }}</code>{% endif %}
      </h3>
      {% if topic.data.description %}
      <p>
        {{ topic.data.description }}
      </p>
      {% endif %}
      <div class="text-center">
        <a href="{{ topic.url | url }}" class="
                     mx-auto 
                     inline-block 
                     lg:mx-0 
                     hover:underline 
                     bg-fuchsia-700 text-gray-100
                     hover:no-underline 
                     font-bold 
                     rounded-full
                     my-6 
                     py-3
                     px-5
                     text-md
                     shadow-lg 
                     focus:outline-none 
                     focus:shadow-outline 
                     transform transition 
                     hover:scale-105 
                     duration-300 ease-in-out">
          Подробнее
        </a>
      </div>
    </div>
  </div>
</div>
